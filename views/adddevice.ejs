  <section class=" bg-dark text-light p-5 p-lg-0 pt-lg-2 text-center">
    <form method="POST" action="/add-device">
        <!-- predefined list of device types -->
        <label for = "type" > select your device type : </label>
        <select name = "type" id ="type">
        <option value="tv"> TV </option>   
        <option value="radio"> Radio </option>  
        <option value="door"> Door </option>   
        <option value="dish washer"> Dish washer </option>   
        <option value="washing machine"> Washing machine </option>  
        <option value="fridge"> fridge </option>    
        <option value="oven"> Oven </option>   
        </select><br><br>

        <!--name of device-->
        <label for="name"> Enter your device name</label>
        <input id="name" type="text" name="name" value="" required/><br>

        <label for="on"> Turn on </label>
        <input type="radio" id="on" name="isOn" value="1" >
        <label for="off"> Turn off </label>
        <input type="radio" id="off" name="isOn" value="0"><br>
      
        <label for="open"> Open </label>
        <input type="radio" id="open" name="isOpen" value="true">
        <label for="close"> Close </label>
        <input type="radio" id="open" name="isOpen" value="false"><br>

        <label for="temp">Temp</label>
        <input id="temp" type="number" name="temp" min="1" max="100" value= "" /><br><br>

        <label for="frequency">Frequency</label>
        <input type="number" id="frequency" name="frequency" step="20" value = ""/><br><br>

        <label for="volume"> Volume </label>
        <input id="volume" type="number" name="volume" min="1" max="100" value= "" /><br><br>

        <label for="timer"> Timer </label>
        <input id="timer" type="number" name="timer"  value= "" /> minutes<br><br>
        <label for ="mode"> Enable power saving</label>
        <input id = "mode" type= "radio" name = "mode" value = "active power saving">
        <label for = "mode">Disable power saving </label>
        <input id = "mode" type= "radio" name = "mode" value = "seactive power saving"><br>

        <input type="submit" value="add device" />
